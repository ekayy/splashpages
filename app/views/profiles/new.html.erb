<h1>Registration: Step 2</h1>


<div class="row">
  <div class="span6 offset3">

  	<%= form_for [@user, @profile],
  								:html => {:multipart => true} do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :content %>
      <%= f.text_field :content %>  

      <%= f.file_field :image %>

      <%= f.submit "Customize", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
