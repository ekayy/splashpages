<% provide(:title, "Edit user") %> 
<h1>Update your account</h1>

<div class="container">
  <div class="row">
    <div class="span6 offset3">
    <%= form_for(@user) do |f| %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
      <% end %>
    </div>
  </div>
</div>